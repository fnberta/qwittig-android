<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.berta.fabio.qwittig" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".ui.ParseApplication">
        <activity
            android:name=".ui.BuyerListActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.BuyerListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.BuyerListActivity" />
        </activity>
        <activity
            android:name=".ui.PurchaseListActivity"
            android:label="@string/title_activity_purchase_list"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.BuyerListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.BuyerListActivity" />
        </activity>
        <activity
            android:name=".ui.ItemListActivity"
            android:label="@string/title_activity_purchase_detail_list"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.PurchaseListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.PurchaseListActivity" />
        </activity>
        <activity
            android:name=".ui.AddPurchaseManuallyActivity"
            android:label="@string/title_activity_add_purchase_manually"
            android:launchMode="singleTop"
            android:parentActivityName=".ui.BuyerListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.BuyerListActivity" />
        </activity>

        <provider
            android:name="ch.berta.fabio.qwittig.data.WgProvider"
            android:authorities="ch.berta.fabio.qwittig"
            android:exported="false" />
    </application>

</manifest>
