<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ch.berta.fabio.qwittig" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="ch.berta.fabio.qwittig.ui.ParseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="ch.berta.fabio.qwittig.ui.HomeActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="ch.berta.fabio.qwittig.ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="ch.berta.fabio.qwittig.ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.ui.HomeActivity" />
        </activity>
        <activity
            android:name="ch.berta.fabio.qwittig.ui.ItemsActivity"
            android:label="@string/title_activity_purchase_detail_list"
            android:launchMode="singleTop"
            android:parentActivityName="ch.berta.fabio.qwittig.ui.HomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.ui.HomeActivity" />
        </activity>
        <activity
            android:name="ch.berta.fabio.qwittig.ui.AddPurchaseActivity"
            android:label="@string/title_activity_add_purchase_manually"
            android:launchMode="singleTop"
            android:parentActivityName="ch.berta.fabio.qwittig.ui.HomeActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.ui.HomeActivity" />
        </activity>
        <activity
            android:name="ch.berta.fabio.qwittig.ui.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name="ch.berta.fabio.qwittig.ui.SettingsGroupNewActivity"
            android:label="@string/title_activity_settings_group_new"
            android:parentActivityName="ch.berta.fabio.qwittig.ui.SettingsActivity"
            android:windowSoftInputMode="adjustResize|stateUnchanged" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.ui.SettingsActivity" />

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingsUserInviteActivity"
            android:label="@string/title_activity_settings_user_invite"
            android:windowSoftInputMode="stateUnchanged"
            android:parentActivityName="ch.berta.fabio.qwittig.ui.SettingsActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ch.berta.fabio.qwittig.ui.SettingsActivity" />
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
