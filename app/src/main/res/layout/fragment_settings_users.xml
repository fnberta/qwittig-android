<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="ch.giantific.qwittig.presentation.settings.users.SettingsUsersViewModel"
            />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:paddingBottom="@dimen/small_space"
        android:transitionGroup="true"
        tools:context=".presentation.settings.users.SettingsUsersFragment"
        tools:targetApi="lollipop"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                style="@style/SubHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/subheader_height"
                android:clickable="false"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/key_line_1"
                android:paddingStart="@dimen/key_line_1"
                android:text="@string/header_settings_users_new"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_space"
                android:layout_marginEnd="@dimen/key_line_1"
                android:layout_marginStart="@dimen/key_line_1"
                android:text="@{@string/desc_user_invite_new(viewModel.groupName)}"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/key_line_1"
                    android:layout_toStartOf="@+id/iv_settings_users_add"
                    android:error="@{!viewModel.validate ? null : viewModel.nicknameComplete ? null : @string/error_nickname}"
                    android:transitionGroup="true"
                    tools:targetApi="lollipop"
                    >

                    <EditText
                        android:id="@+id/et_settings_users_add_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/hint_nickname"
                        android:inputType="textPersonName"
                        android:onTextChanged="@{viewModel.onNicknameChanged}"
                        android:text="@{viewModel.nickname}"
                        tools:text="Vera"
                        />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/iv_settings_users_add"
                    android:layout_width="@dimen/touch_target_min"
                    android:layout_height="@dimen/touch_target_min"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="center_vertical"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/hint_users"
                    android:onClick="@{viewModel.onAddUserClick}"
                    android:padding="@dimen/icon_padding"
                    android:src="@drawable/ic_person_add_black_24dp"
                    />

            </RelativeLayout>

            <TextView
                style="@style/SubHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/subheader_height"
                android:clickable="false"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/key_line_1"
                android:paddingStart="@dimen/key_line_1"
                android:text="@string/header_settings_users_existing"
                />

            <TextView
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/normal_space"
                android:layout_marginEnd="@dimen/key_line_1"
                android:layout_marginStart="@dimen/key_line_1"
                android:text="@string/desc_user_invite_existing"
                />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_settings_users"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>