<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="rowItemUser"
            type="ch.giantific.qwittig.domain.models.RowItemUser"
            />
    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="@dimen/avatar_size"
            android:layout_height="@dimen/avatar_size"
            android:layout_marginBottom="@dimen/min_space"
            android:layout_marginEnd="@dimen/key_line_1"
            android:layout_marginStart="@dimen/key_line_1"
            android:alpha="@{rowItemUser.userAlpha}"
            android:contentDescription="@string/user_avatar"
            android:src="@drawable/ic_account_circle_black_40dp"
            />

        <TextView
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="@dimen/avatar_size"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="@{rowItemUser.userNickname}"
            tools:text="Vera"
            />

    </LinearLayout>

</layout>
