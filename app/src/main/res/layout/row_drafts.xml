<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_avatar_with_text"
    android:background="?android:attr/activatedBackgroundIndicator">

    <TextView
        android:id="@+id/tv_date"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/normal_space"
        android:paddingStart="@dimen/min_space"
        android:paddingEnd="@dimen/min_space"
        android:gravity="center"
        android:lines="2"
        android:textAllCaps="true"
        android:background="@color/grey_light"
        tools:text="FEB\n24"/>

    <TextView
        android:id="@+id/tv_store"
        style="@style/ListTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/tv_date"
        android:layout_toStartOf="@+id/tv_total_value"
        android:gravity="center_vertical"
        tools:text="Denner"/>

    <TextView
        android:id="@id/tv_total_value"
        style="@style/ListTextView"
        android:layout_width="@dimen/balance_change_width"
        android:layout_height="@dimen/balance_change_height"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/normal_space"
        android:layout_marginEnd="@dimen/key_line_1"
        android:paddingStart="@dimen/small_space"
        android:paddingEnd="@dimen/small_space"
        android:gravity="center"
        android:background="@color/grey_light"
        tools:text="-50"/>

</RelativeLayout>