<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_avatar_with_text">
    
    <TextView
        android:id="@+id/list_date"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:background="@drawable/date_background"
        tools:text="24.08.14"/>

    <TextView
        android:id="@+id/list_buyer"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_toEndOf="@id/list_date"
        android:gravity="center_vertical"
        tools:text="Vera"/>

    <TextView
        android:id="@+id/list_store"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_toEndOf="@id/list_buyer"
        android:layout_toStartOf="@+id/list_total_price"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_1"
        android:gravity="center_vertical"
        tools:text="Denner"/>

    <TextView
        android:id="@id/list_total_price"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_toStartOf="@+id/list_balance_change"
        android:gravity="center_vertical"
        android:alpha="0.5"
        tools:text="123.50"/>

    <TextView
        android:id="@id/list_balance_change"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_alignParentEnd="true"
        android:gravity="center_vertical"
        tools:text="-50"/>

</RelativeLayout>