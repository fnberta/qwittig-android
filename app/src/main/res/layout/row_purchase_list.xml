<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_avatar_with_text"
    android:weightSum="9"
    android:paddingStart="@dimen/key_line_1"
    android:paddingEnd="@dimen/key_line_1">
    
    <TextView
        android:id="@+id/list_date"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_weight="3"
        android:gravity="center_vertical"
        tools:text="24.08.14"/>

    <TextView
        android:id="@+id/list_buyer"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_weight="3"
        android:gravity="center_vertical"
        tools:text="Vera"/>

    <TextView
        android:id="@+id/list_store"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="0dp"
        android:layout_height="@dimen/list_avatar_with_text"
        android:layout_weight="3"
        android:gravity="center_vertical"
        tools:text="Denner"/>

    <TextView
        android:id="@+id/list_total_price"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/list_avatar_with_text"
        android:gravity="center_vertical"
        tools:text="123.50"/>

</LinearLayout>