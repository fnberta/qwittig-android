<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <TextView
        android:id="@+id/list_date"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="@dimen/avatar_size"
        android:layout_height="@dimen/avatar_size"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/date_background"
        tools:text="24.08.14"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="9"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/list_buyer"
            style="@style/ListRowAvatarOneLineText"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_avatar_with_text"
            android:layout_weight="3"
            android:gravity="center_vertical"
            tools:text="Vera"/>

        <TextView
            android:id="@+id/list_store"
            style="@style/ListRowAvatarOneLineText"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_avatar_with_text"
            android:layout_weight="3"
            android:layout_marginStart="@dimen/key_line_1"
            android:layout_marginEnd="@dimen/small_space"
            android:gravity="center_vertical"
            tools:text="Denner"/>

        <TextView
            android:id="@+id/list_total_price"
            style="@style/ListRowAvatarOneLineText"
            android:layout_width="0dp"
            android:layout_height="@dimen/list_avatar_with_text"
            android:layout_weight="3"
            android:gravity="center_vertical|end"
            android:alpha="0.5"
            tools:text="123.50"/>

        <TextView
            android:id="@+id/list_balance_change"
            style="@style/ListRowAvatarOneLineText"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginEnd="@dimen/key_line_1"
            android:gravity="center"
            tools:text="-50"
            tools:background="@color/green"/>
    </LinearLayout>


</LinearLayout>