<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingTop="@dimen/small_space"
        android:paddingBottom="@dimen/small_space"
        android:clipToPadding="false"
        tools:context="ch.berta.fabio.qwittig.ui.PurchaseAddFragment">

        <include
            android:id="@+id/view_add"
            android:visibility="gone"
            layout="@layout/include_purchase_add_edit"/>

    </ScrollView>

    <ch.berta.fabio.qwittig.ui.widgets.FloatingActionButton
        android:id="@+id/fab_purchase_save"
        style="@style/FAB"
        android:contentDescription="@string/add_purchase"
        android:layout_height="@dimen/fab_size"
        android:layout_width="@dimen/fab_size"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="@dimen/normal_space"
        android:layout_marginBottom="@dimen/normal_space"
        android:visibility="gone"
        android:src="@drawable/ic_save"/>

    <ProgressBar
        android:id="@+id/pb_purchase_add_auto"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"/>

</FrameLayout>


