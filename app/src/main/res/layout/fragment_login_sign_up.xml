<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionGroup="true"
    tools:context="ch.giantific.qwittig.ui.fragments.LoginSignUpFragment"
    >

    <LinearLayout
        android:id="@+id/ll_login_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginStart="@dimen/key_line_1"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/ibt_login_signup_avatar"
            android:layout_width="@dimen/avatar_size_2x"
            android:layout_height="@dimen/avatar_size_2x"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/small_space"
            android:layout_marginTop="@dimen/normal_space"
            android:contentDescription="@string/user_avatar"
            tools:src="@drawable/ic_account_circle_black_80dp"/>

        <TextView
            android:id="@+id/user_name"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/small_space"
            android:gravity="center_horizontal"
            android:text="@string/user_avatar"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_signup_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:layout_marginTop="@dimen/small_space"
            android:transitionGroup="true">

            <AutoCompleteTextView
                android:id="@+id/et_login_signup_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_signup_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:transitionGroup="true">

            <EditText
                android:id="@+id/et_login_signup_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_signup_password_repeat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:transitionGroup="true">

            <EditText
                android:id="@+id/et_login_signup_password_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password_repeat"
                android:inputType="textPassword"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_signup_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:transitionGroup="true">

            <EditText
                android:id="@+id/et_login_signup_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_nickname"
                android:inputType="textPersonName"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/bt_login_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login_button_sign_up"
            android:theme="@style/ColoredRaisedButton"/>

    </LinearLayout>

    <include layout="@layout/include_progress_login" />
</FrameLayout>

