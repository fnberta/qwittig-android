<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_2_minus_key_line_1_minus_icon_size"
        android:contentDescription="@string/hint_group_name"
        android:src="@drawable/ic_group_black_24dp"
        android:alpha="@dimen/icon_alpha_on_light_background"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_users_involved"
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatar_plus_caption"/>

</LinearLayout>