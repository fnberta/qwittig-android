<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="ch.giantific.qwittig.presentation.common.viewmodels.OnlineListViewModel"
            />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        >

        <ch.giantific.qwittig.presentation.common.widgets.SwipeRefreshLayoutHack
            android:id="@+id/srl_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:onRefreshListener="@{viewModel.onRefreshListener}"
            app:colorScheme="@{@intArray/srl_color_scheme}"
            app:refreshing="@{viewModel.refreshing}"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/small_space"
                android:scrollbars="vertical"
                android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
                />

        </ch.giantific.qwittig.presentation.common.widgets.SwipeRefreshLayoutHack>

        <include
            layout="@layout/include_progress"
            app:viewModel="@{viewModel}"
            />

    </FrameLayout>
</layout>