<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="viewModel"
            type="ch.giantific.qwittig.presentation.viewmodels.rows.CompUnpaidRowViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/min_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginTop="@dimen/min_space"
        card_view:cardBackgroundColor="@color/red_light"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <include
                layout="@layout/include_compensation_avatar"
                android:layout_width="100dp"
                android:layout_height="143dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:viewModel="@{viewModel}"
                />

            <include
                layout="@layout/include_card_top_progress"
                app:viewModel="@{viewModel}"
                />

            <include
                layout="@layout/include_compensation_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_avatar"
                app:viewModel="@{viewModel}"
                />

            <Button
                android:id="@+id/bt_comp_unpaid_remind_paid"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_header"
                android:layout_toEndOf="@id/iv_avatar"
                android:text="@{@string/button_remind_paid(viewModel.compUsername)}"
                android:textColor="?attr/colorAccent"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>