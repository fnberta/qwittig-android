<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="item"
            type="ch.giantific.qwittig.presentation.tasks.list.items.TaskItem"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/min_space"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginTop="@dimen/min_space"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            >

            <include
                layout="@layout/include_card_top_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:viewModel="@{item}"
                />

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/avatar_size"
                android:layout_height="@dimen/avatar_size"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/normal_space"
                android:layout_marginEnd="@dimen/key_line_2_minus_key_line_1_minus_avatar_size"
                android:layout_marginStart="@dimen/key_line_1"
                android:layout_marginTop="@dimen/normal_space"
                android:contentDescription="@string/user_avatar"
                app:avatar="@{item.taskUserResponsibleAvatar}"
                app:fallback="@{@drawable/ic_account_circle_black_40dp}"
                tools:src="@drawable/ic_account_circle_black_40dp"
                />

            <TextView
                android:id="@+id/tv_task_user_responsible"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_space"
                android:layout_toEndOf="@id/iv_avatar"
                android:layout_toStartOf="@+id/tv_task_deadline"
                android:text="@{item.currentUserResponsible ? @string/nickname_me : item.taskUserResponsibleNickname}"
                tools:text="Vera"
                />

            <TextView
                android:id="@+id/tv_task_title"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_task_user_responsible"
                android:layout_toEndOf="@id/iv_avatar"
                android:text="@{item.taskTitle}"
                tools:text="Küche putzen"
                />

            <TextView
                android:id="@+id/tv_task_time_frame"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_task_title"
                android:layout_marginTop="@dimen/small_space"
                android:layout_toEndOf="@id/iv_avatar"
                android:text="@{item.taskTimeFrame}"
                tools:text="Wöchentlich"
                />

            <TextView
                android:id="@+id/tv_task_users_involved"
                style="@style/TextAppearance.AppCompat.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_task_time_frame"
                android:layout_marginBottom="@dimen/normal_space"
                android:layout_toEndOf="@id/iv_avatar"
                tools:text="vera - lexli - sturzi"
                />

            <TextView
                android:id="@+id/tv_task_deadline"
                style="@style/TextAppearance.AppCompat.Body2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/normal_space"
                android:layout_marginTop="@dimen/normal_space"
                app:deadline="@{item.daysToTaskDeadline}"
                tools:text="In 2 Tagen"
                tools:textColor="@color/green"
                />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/tv_task_users_involved"
                android:background="?android:attr/listDivider"
                />

            <Button
                android:id="@+id/bt_task_done"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/divider"
                android:text="@{item.taskDoneText}"
                android:textColor="?attr/colorAccent"
                android:visibility="@{item.currentUserResponsible ? View.VISIBLE : View.GONE}"
                tools:text="Done for this week"
                />

            <Button
                android:id="@+id/bt_task_remind"
                style="?borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/divider"
                android:text="@{@string/task_remind_user(item.taskUserResponsibleNickname)}"
                android:textColor="?attr/colorAccent"
                android:visibility="@{item.currentUserResponsible ? View.GONE : View.VISIBLE}"
                tools:text="Remind sturzi"
                />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>
