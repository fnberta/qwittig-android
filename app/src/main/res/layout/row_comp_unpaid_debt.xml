<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="itemModel"
            type="ch.giantific.qwittig.presentation.finance.unpaid.itemmodels.CompUnpaidItemModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/small_space"
        android:layout_marginStart="@dimen/small_space"
        android:layout_marginTop="@dimen/small_space"
        card_view:cardBackgroundColor="@color/red_light"
        card_view:cardCornerRadius="@dimen/card_corner_radius"
        card_view:cardElevation="@dimen/card_elevation"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <include
                layout="@layout/include_compensation_avatar"
                android:layout_width="@dimen/compensation_avatar_width"
                android:layout_height="@dimen/compensation_avatar_height"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:itemModel="@{itemModel}"
                />

            <include
                layout="@layout/include_compensation_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iv_comp_avatar"
                app:itemModel="@{itemModel}"
                />

            <!--<Button-->
            <!--style="?android:attr/borderlessButtonStyle"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/ll_header"-->
            <!--android:layout_toEndOf="@id/iv_comp_avatar"-->
            <!--android:text="@{@string/button_remind_paid(itemModel.compUsername)}"-->
            <!--android:textColor="?attr/colorAccent"-->
            <!--android:visibility="@{itemModel.userPending ? View.GONE : View.VISIBLE}"-->
            <!--/>-->

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</layout>