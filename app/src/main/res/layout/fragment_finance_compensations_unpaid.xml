<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.giantific.qwittig.ui.fragments.FinanceCompensationsUnpaidFragment">

    <include layout="@layout/include_srl_recycler_view"/>

    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginStart="@dimen/key_line_1"
        android:clipChildren="false"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="invisible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_empty_view_title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:drawablePadding="@dimen/small_space"
            android:drawableTop="@drawable/ic_attach_money_black_144dp"
            android:gravity="center_horizontal"
            tools:text="@string/no_compensations"/>

        <TextView
            android:id="@+id/tv_empty_view_subtitle"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/normal_space"
            android:gravity="center_horizontal"
            tools:text="@string/no_compensations_subhead"/>

        <ch.berta.fabio.fabprogress.FabProgress
            android:id="@+id/fab_new_account_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_swap_horiz_black_24dp"
            android:visibility="gone"
            app:fp_arcColor="@color/green"
            app:fp_finalIcon="@drawable/ic_done_black_24dp"
            app:fp_reusable="true"
            tools:visibility="visible"
            />
    </LinearLayout>

</FrameLayout>


