<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/small_space"
    android:layout_marginEnd="@dimen/small_space"
    android:layout_marginTop="@dimen/min_space"
    android:layout_marginBottom="@dimen/min_space"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@id/iv_avatar"
            android:layout_width="90dp"
            android:layout_height="142dp"
            android:layout_alignParentStart="true"
            android:contentDescription="@string/user_avatar"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_avatar_80dp"/>

        <TextView
            android:id="@+id/tv_payer"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginEnd="@dimen/normal_space"
            android:layout_marginTop="@dimen/normal_space"
            android:layout_marginBottom="@dimen/small_space"
            android:layout_toEndOf="@id/iv_avatar"
            tools:text="veriberi"/>

        <TextView
            android:id="@+id/tv_amount"
            style="@style/Base.TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_space"
            android:layout_marginEnd="@dimen/normal_space"
            android:layout_marginBottom="@dimen/normal_space"
            android:layout_toEndOf="@id/iv_avatar"
            android:layout_below="@id/tv_payer"
            tools:text="33.45"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tv_amount"
            android:layout_toEndOf="@id/iv_avatar"
            android:background="?android:attr/listDivider"/>

        <Button
            android:id="@+id/bt_done"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/iv_avatar"
            android:layout_below="@id/tv_amount"
            android:textColor="@color/accent"
            android:text="@string/button_done"/>

        <Button
            android:id="@+id/bt_remind"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_amount"
            android:layout_toEndOf="@id/bt_done"
            android:text="@string/button_remind"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>