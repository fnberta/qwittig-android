<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context="ch.giantific.qwittig.ui.fragments.TasksFragment"
    >

    <include layout="@layout/include_srl_recycler_view" />

    <TextView
        android:id="@+id/empty_view"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:drawablePadding="@dimen/small_space"
        android:drawableTop="@drawable/ic_assignment_black_144dp"
        android:text="@string/no_tasks"
        android:visibility="gone"
        tools:visibility="visible"
        />

</FrameLayout>
