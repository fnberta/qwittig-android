<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.giantific.qwittig.ui.StatsSpendingFragment"
    android:animateLayoutChanges="true"
    >

    <ch.giantific.qwittig.ui.widgets.BarChart
        android:id="@+id/bc_spending"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginTop="@dimen/small_space"
        android:layout_marginBottom="@dimen/small_space"
        android:visibility="gone"
        />

    <include layout="@layout/include_stats_empty_view"/>

    <include layout="@layout/include_progress"/>

</FrameLayout>
