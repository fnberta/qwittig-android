<android.support.design.widget.CoordinatorLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.giantific.qwittig.ui.activities.SettingsStoresActivity"
    >

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/toolbar_height_x2"
        tools:ignore="MergeRootFrame"
        />

    <include layout="@layout/include_appbar_x2"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginTop="@dimen/fab_mini_margin_toolbar_x2"
        android:src="@drawable/ic_add_black_24dp"
        android:visibility="gone"
        app:fabSize="mini"
        tools:visibility="visible"
        />

</android.support.design.widget.CoordinatorLayout>