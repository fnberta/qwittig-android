<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_header_purchase"
        style="@style/SubHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subheader_height"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/key_line_1"
        android:paddingStart="@dimen/key_line_1"
        android:text="@string/header_purchase"/>

    <include
        android:id="@+id/ll_user"
        layout="@layout/row_recycler_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_header_purchase"/>

    <TextView
        android:id="@+id/tv_date"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_min"
        android:layout_alignParentStart="true"
        android:layout_below="@id/ll_user"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/key_line_2_minus_key_line_1_minus_icon_size"
        android:drawableStart="@drawable/ic_event_black_24dp"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/key_line_1"
        android:paddingStart="@dimen/key_line_1"
        tools:text="27. November 2014"
        />

    <TextView
        android:id="@+id/tv_store"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="match_parent"
        android:layout_height="@dimen/touch_target_min"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_date"
        android:layout_marginTop="@dimen/small_space"
        android:background="?selectableItemBackground"
        android:drawablePadding="@dimen/key_line_2_minus_key_line_1_minus_icon_size"
        android:drawableStart="@drawable/ic_shopping_cart_black_24dp"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/key_line_1"
        android:paddingStart="@dimen/key_line_1"
        tools:text="Denner"
        />

    <TextView
        android:id="@+id/tv_header_articles"
        style="@style/SubHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subheader_height"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_store"
        android:gravity="center_vertical"
        android:paddingEnd="@dimen/key_line_1"
        android:paddingStart="@dimen/key_line_1"
        android:text="@string/header_items"/>

    <LinearLayout
        android:id="@+id/ll_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_header_articles"
        android:orientation="vertical"/>
    <!--android:animateLayoutChanges="true"-->

    <Button
        android:id="@+id/bt_item_add"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_items"
        android:layout_marginBottom="@dimen/small_space"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginStart="@dimen/key_line_2"
        android:text="@string/button_add_item"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/bt_item_add"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginStart="@dimen/key_line_2"
        android:layout_marginTop="@dimen/small_space"
        android:background="?android:attr/listDivider"/>

    <TextView
        android:id="@+id/tv_total_text"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/touch_target_min"
        android:layout_alignParentStart="true"
        android:layout_below="@id/divider"
        android:layout_marginStart="@dimen/key_line_2"
        android:layout_marginTop="@dimen/normal_space"
        android:gravity="center_vertical"
        android:text="@string/purchase_total"/>

    <TextView
        android:id="@+id/tv_total_value"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/touch_target_min"
        android:layout_below="@id/divider"
        android:layout_marginTop="@dimen/normal_space"
        android:layout_toStartOf="@+id/sp_currency"
        android:gravity="center_vertical"
        tools:text="124.50"/>

    <Spinner
        android:id="@id/sp_currency"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/touch_target_min"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/divider"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_marginStart="@dimen/min_space"
        android:layout_marginTop="@dimen/normal_space">
    </Spinner>

    <TextView
        android:id="@+id/tv_my_share_text"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_total_text"
        android:layout_marginStart="@dimen/key_line_2"
        android:layout_marginTop="@dimen/my_share_neg_margin"
        android:text="@string/purchase_my_share"
        android:textColor="?attr/colorAccent"/>

    <TextView
        android:id="@+id/tv_my_share_value"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_total_value"
        android:layout_below="@id/tv_total_value"
        android:layout_marginTop="@dimen/my_share_neg_margin"
        android:textColor="?attr/colorAccent"
        tools:text="124.50"/>

    <TextView
        android:id="@+id/tv_my_share_currency"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/sp_currency"
        android:layout_below="@id/tv_total_value"
        android:layout_marginTop="@dimen/my_share_neg_margin"
        android:textColor="?attr/colorAccent"
        tools:text="CHF"/>

    <TextView
        android:id="@+id/tv_exchange_rate_text"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_my_share_text"
        android:layout_marginStart="@dimen/key_line_2"
        android:layout_marginTop="@dimen/small_space"
        android:text="@string/exchange_rate"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_exchange_rate_value"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/tv_my_share_currency"
        android:layout_below="@id/tv_my_share_value"
        android:layout_marginTop="@dimen/small_space"
        android:visibility="gone"
        tools:text="1.34657564636"/>

</RelativeLayout>

