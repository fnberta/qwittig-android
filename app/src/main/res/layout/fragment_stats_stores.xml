<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/key_line_1"
    android:layout_marginEnd="@dimen/key_line_1"
    android:orientation="vertical"
    tools:context="ch.berta.fabio.qwittig.ui.StatsStoresFragment">

    <include layout="@layout/include_stats_period"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pc_stores"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/small_space"
            android:paddingBottom="@dimen/small_space"
            android:clipToPadding="false"
            android:visibility="gone"/>

        <include layout="@layout/include_progress"/>
    </FrameLayout>



</LinearLayout>
