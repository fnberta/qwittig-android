<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_add_purchase_row"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/element_spacing_normal"
    android:layout_marginBottom="@dimen/element_spacing_normal">

    <CheckBox
        android:id="@+id/cb_item_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_2_minus_key_line_1_minus_icon_size"
        android:layout_gravity="center_vertical"
        android:checked="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/et_item_name"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="0.5"
            android:inputType="text"
            android:hint="@string/hint_item_name"/>

        <EditText
            android:id="@+id/et_item_count"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="0.2"
            android:inputType="number"
            android:hint="@string/hint_item_count"/>

        <EditText
            android:id="@+id/et_item_price"
            style="@style/EditText"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="0.3"
            android:inputType="numberDecimal"
            android:hint="@string/hint_item_price"/>

        <ImageButton
            android:id="@+id/ibt_remove_row"
            style="?android:borderlessButtonStyle"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:padding="@dimen/icon_size"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_clear_black_24dp"
            android:alpha="@dimen/icon_alpha_on_light_background"
            android:contentDescription="@string/ibt_add_item"/>

    </LinearLayout>
</LinearLayout>