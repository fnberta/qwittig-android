<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dialog_padding"
        android:layout_marginStart="@dimen/dialog_padding"
        android:layout_marginTop="@dimen/small_space"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/header_note"
            android:inputType="textMultiLine|textCapSentences"
            tools:text="Die ist ein Text, die hoffentlich über eine Zeile hinausgeht. Falls nicht, füge ich gleich nochmals eine Zeile an."
            />

    </android.support.design.widget.TextInputLayout>

</LinearLayout>