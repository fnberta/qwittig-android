<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.settings.SettingsUserInviteFragment"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_space"
            android:layout_marginEnd="@dimen/key_line_1"
            android:layout_marginStart="@dimen/key_line_2"
            android:layout_marginTop="@dimen/small_space"
            android:text="@string/desc_user_invite"
            />

        <LinearLayout
            android:id="@+id/ll_users"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

        <Button
            android:id="@+id/bt_user_add"
            style="?borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/key_line_1"
            android:layout_marginStart="@dimen/key_line_2"
            android:text="@string/button_add_user"
            />

        <LinearLayout
            android:id="@+id/ll_users_invited"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/tv_header_users_invited"
                style="@style/SubHeader"
                android:layout_width="match_parent"
                android:layout_height="@dimen/subheader_height"
                android:gravity="center_vertical"
                android:paddingEnd="@dimen/key_line_1"
                android:paddingStart="@dimen/key_line_1"
                android:text="@string/header_users_invited"
                />

            <TextView
                android:id="@+id/tv_no_open_invitations"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/no_invitations"
                android:visibility="gone"
                tools:visibility="visible"
                />
        </LinearLayout>
    </LinearLayout>
</ScrollView>