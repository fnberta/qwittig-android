<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="ch.giantific.qwittig.presentation.home.purchases.list.DraftsViewModel"
            />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.home.purchases.list.DraftsFragment"
        >

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingBottom="@dimen/small_space"
            android:scrollbars="vertical"
            android:visibility="@{viewModel.loading ? View.GONE : View.VISIBLE}"
            />

        <TextView
            android:id="@+id/empty_view"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="@dimen/small_space"
            android:drawableTop="@drawable/ic_shopping_cart_black_144dp"
            android:gravity="center_horizontal"
            android:text="@string/no_purchases"
            android:visibility="@{!viewModel.empty ? View.GONE : viewModel.loading ? View.GONE : View.VISIBLE}"
            tools:visibility="visible"/>

        <include
            layout="@layout/include_progress"
            app:viewModel="@{viewModel}"
            />

    </FrameLayout>
</layout>
