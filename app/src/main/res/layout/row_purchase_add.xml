<LinearLayout
    android:id="@+id/ll_add_purchase_row"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small_space"
    android:orientation="horizontal"
    >

    <ch.giantific.qwittig.presentation.ui.widgets.ListCheckBox
        android:id="@+id/cb_item_enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/key_line_2_minus_key_line_1_minus_checkbox"
        android:layout_marginStart="@dimen/key_line_1_minus_checkbox_margin"
        android:checked="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:transitionGroup="true"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_item_name"
                android:imeOptions="actionNext"
                android:inputType="text|textCapSentences"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_item_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/normal_space"
            android:layout_weight="0.3"
            android:transitionGroup="true"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:hint="@string/hint_item_price"
                android:inputType="numberDecimal"
                android:maxLength="9"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</LinearLayout>