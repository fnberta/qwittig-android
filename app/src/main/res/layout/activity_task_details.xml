<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ch.giantific.qwittig.ui.TaskDetailsActivity"
    >

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/toolbar_height_x3"
            android:transitionGroup="true"
            tools:ignore="MergeRootFrame"
            />

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:transitionGroup="true"
            >

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_height="@dimen/toolbar_height_x3"
                android:layout_width="match_parent"
                android:minHeight="?attr/actionBarSize"
                android:gravity="bottom"
                app:contentInsetStart="@dimen/key_line_2"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/tv_details_title"
                        style="@style/Base.TextAppearance.AppCompat.Display1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/normal_space"
                        android:textColor="@android:color/white"
                        tools:text="Waschen"
                        />

                    <TextView
                        android:id="@+id/tv_details_subtitle"
                        style="@style/Base.TextAppearance.AppCompat.Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        tools:text="TÃ¤glich"
                        />

                    <TextView
                        android:id="@+id/tv_task_details_users_involved"
                        style="@style/Base.TextAppearance.AppCompat.Subhead"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        tools:text="Ich - vera - lexli - sturzi"
                        />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_task_details_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/normal_space"
            android:src="@drawable/ic_check_black_24dp"
            app:layout_anchor="@id/appbar"
            app:layout_anchorGravity="bottom|end"
            />

    </android.support.design.widget.CoordinatorLayout>

    <include layout="@layout/include_navdrawer"/>

</android.support.v4.widget.DrawerLayout>
