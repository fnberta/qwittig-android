<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_store"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_with_text">

    <TextView
        android:id="@+id/tv_store_name"
        style="@style/ListTextView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/normal_space"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        tools:text="Denner"/>

    <CheckBox
        android:id="@+id/cb_store_favorite"
        style="?android:attr/starStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:focusable="false"/>
</RelativeLayout>