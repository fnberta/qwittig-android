<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_store"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_with_text"
    android:background="@drawable/state_selector_selectable_lists"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_store_name"
        style="@style/ListRowAvatarOneLineText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/normal_space"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical"
        tools:text="Denner"/>

    <ImageView
        android:id="@+id/iv_drag_handler"
        android:layout_width="16dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/key_line_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/drag_handler"
        android:scaleType="fitXY"
        android:visibility="gone"/>
</RelativeLayout>