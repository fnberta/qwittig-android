<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="ch.giantific.qwittig.presentation.viewmodels.rows.PurchaseAddExchangeRateRowViewModel"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="@{viewModel.exchangeRateVisible ? View.VISIBLE : View.GONE}"
        >

        <TextView
            android:id="@+id/tv_exchange_rate_text"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/key_line_2"
            android:layout_marginTop="@dimen/small_space"
            android:text="@string/exchange_rate"
            />

        <TextView
            android:id="@+id/tv_exchange_rate_value"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity=""
            android:layout_marginTop="@dimen/small_space"
            tools:text="1.34657564636"
            />

    </LinearLayout>


</layout>
