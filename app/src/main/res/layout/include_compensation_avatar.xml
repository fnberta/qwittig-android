<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="viewModel"
            type="ch.giantific.qwittig.presentation.finance.unpaid.viewmodels.items.CompUnpaidItemViewModel"
            />
    </data>

    <ImageView
        android:id="@+id/iv_comp_avatar"
        android:contentDescription="@string/user_avatar"
        android:scaleType="centerCrop"
        app:avatarSquare="@{viewModel.avatar}"
        app:fallback="@{@drawable/ic_account_box_black_80dp}"
        tools:src="@drawable/ic_account_box_black_80dp"
        />

</layout>

