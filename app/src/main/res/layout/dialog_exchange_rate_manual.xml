<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_exchange_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dialog_padding"
            android:layout_marginStart="@dimen/dialog_padding"
            android:layout_marginTop="@dimen/small_space"
            android:theme="@style/AppTheme.PrimaryAsAccent"
            >

            <EditText
                android:id="@+id/et_exchange_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_exchange_rate"
                android:inputType="numberDecimal"
                />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</layout>