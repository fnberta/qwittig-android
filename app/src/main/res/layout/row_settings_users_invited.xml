<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_users_invited_row"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_with_text">

    <ImageView
        android:id="@+id/iv_email"
        android:layout_width="@dimen/icon_size"
        android:layout_height="@dimen/icon_size"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/key_line_1"
        android:layout_marginEnd="@dimen/key_line_2_minus_key_line_1_minus_icon_size"
        android:src="@drawable/ic_person_black_24dp"
        android:alpha="@dimen/icon_black_alpha"
        android:contentDescription="@string/hint_users"/>

    <TextView
        android:id="@+id/tv_invited_user"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toEndOf="@id/iv_email"
        android:layout_toStartOf="@+id/iv_clear_invite"
        tools:text="fabio@qwittig.ch"/>

    <ImageView
        android:id="@id/iv_clear_invite"
        android:layout_width="@dimen/touch_target_min"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:background="?selectableItemBackground"
        android:src="@drawable/ic_clear_black_24dp"
        android:alpha="@dimen/icon_black_alpha"
        android:contentDescription="@string/hint_clear"/>

</RelativeLayout>