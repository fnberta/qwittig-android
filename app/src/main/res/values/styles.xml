<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@android:color/white</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.Explode" parent="AppTheme"/>

    <style name="AppTheme.SlideBottom" parent="AppTheme"/>

    <style name="AppTheme.SlideEnd" parent="AppTheme"/>

    <style name="AppTheme.Login" parent="AppTheme">
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.DrawStatusBar" parent="AppTheme"/>

    <style name="AppTheme.DrawStatusBar.Explode" parent="AppTheme.DrawStatusBar"/>

    <style name="AppTheme.DrawStatusBar.Green" parent="AppTheme.DrawStatusBar">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
    </style>

    <style name="AppTheme.DrawStatusBar.Red" parent="AppTheme.DrawStatusBar">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
    </style>

    <style name="ListTextView" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="SubHeader">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="ColoredRaisedButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">?attr/colorAccent</item>
    </style>

    <style name="HomeToolbarTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display1</item>
    </style>

    <style name="LoginHeader">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display3</item>
    </style>
</resources>
