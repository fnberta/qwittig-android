<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app's branding color (for the app bar) -->
        <item name="colorPrimary">@color/primary</item>
        <!--   darker variant of colorPrimary (for status bar, contextual app bars) -->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.WithNavDrawer" parent="AppTheme"/>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
    </style>

    <style name="ListRowAvatarOneLineText" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Subheader">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="EditText">
        <item name="ch.berta.fabio.qwittig:floatingLabel">highlight</item>
        <item name="ch.berta.fabio.qwittig:primaryColor">@color/accent</item>
    </style>

    <style name="FAB">
        <item name="android:background">@drawable/fab_background</item>
    </style>

</resources>
