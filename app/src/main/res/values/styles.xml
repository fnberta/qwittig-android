<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorButtonNormal">@android:color/white</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.WithNavDrawer" parent="AppTheme"/>

    <style name="AppTheme.WithNavDrawer.Login" parent="AppTheme.WithNavDrawer">
    </style>

    <style name="AppTheme.WithNavDrawer.Green" parent="AppTheme.WithNavDrawer">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
    </style>

    <style name="AppTheme.WithNavDrawer.Red" parent="AppTheme.WithNavDrawer">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
    </style>

    <style name="ListTextView" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="SubHeader">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="HomeToolbarTitle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Display2</item>
    </style>

    <style name="ColoredRaisedButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="colorButtonNormal">@color/accent</item>
    </style>
</resources>
