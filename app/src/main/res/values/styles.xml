<resources>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme" parent="BaseTheme"/>

    <style name="AppTheme.WithNavDrawer" parent="AppTheme"/>

    <style name="AppTheme.WithNavDrawer.Green" parent="AppTheme.WithNavDrawer">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
    </style>

    <style name="AppTheme.WithNavDrawer.Red" parent="AppTheme.WithNavDrawer">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
    </style>

    <style name="ListTextView" parent="@style/TextAppearance.AppCompat.Subhead">
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Subheader">
        <item name="android:fontFamily">@string/font_fontFamily_medium</item>
        <item name="android:textSize">@dimen/text_size_subheader</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="EditText">
        <item name="ch.berta.fabio.qwittig:floatingLabel">highlight</item>
        <item name="ch.berta.fabio.qwittig:primaryColor">?attr/colorAccent</item>
    </style>

    <style name="FAB">
        <item name="android:background">@drawable/fab_background</item>
    </style>

</resources>
